extends ../layouts/default.pug
block main
  h1.box-title Sửa nhóm quyền
  - if(permissions.includes("role-edit"))
    .section-8
      form#setting-role-edit-form
        .inner-group(style ="display:none")
          label(class="inner-label" for="id") id
          input(type="text" id="id" name="id" value = role.id)
        .inner-group
          label(class="inner-label" for="name") Tên nhóm quyền
          input(type="text" id="name" name="name" value = role.name)
        .inner-group
          label(class="inner-label" for="description") Mô tả ngắn
          input(type="text" id="description" name="description" value= role. description)
        .inner-group
          label(class="inner-label") Phân quyền
          .inner-checkbox-list
            each item in permissionList
              .inner-checkbox-item
                input(
                  type="checkbox" 
                  name="permissions" 
                  value=item.value
                  checked = (role.permissions.includes(item.value))?true:false
                  )
                label #{item.lable}
        .inner-button.inner-two-col
          button Cập nhật
      .inner-back
        a(href=`/${pathAdmin}/setting/role/list`) Quay lại danh sách