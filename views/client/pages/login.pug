extends ../layout/account.pug
block main
  .form-account
    h2.inner-title Đăng nhập
    p.inner-desc Vui lòng nhập email và mật khẩu để tiếp tục
    
    form.inner-form#login-form
      .inner-group
        label(
          class="inner-label"
          for="email"
        ) Email
        input(
          type="email"
          name="email"
          id="email"
          placeholder="Nhập email của bạn vào đây!"
          class="inner-control"
        )
      .inner-group
        label(
          class="inner-label"
          for="password"
        ) Mật khẩu
        input(
          type="password"
          name="password"
          id="password"
          class="inner-control"
        )
      .inner-meta
        .inner-confirm
          input(
            type="checkbox"
            name="rememberPassword"
            id="remember-password"
            class="inner-check"
          )
          label(
            class="inner-label"
            for="remember-password"
          ) Nhớ mật khẩu
        a(href=`/account/forgot-password` class="inner-forgot-password") Quên mật khẩu?
      button(class="inner-button") Đăng Nhập
    
    .inner-more
      span Bạn chưa có tài khoản?
      a(href=`/account/register`) Tạo tài khoản
    .inner-more(style="margin-top:20px")
      a(href=`/`) Quay lại trang chủ